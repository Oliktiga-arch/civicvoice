{
  "name": "civicvoice-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for CivicVoice project",
  "workspaces": [
    "packages/*",
    "my-react-app",
    "my-express-app"
  ],
  "scripts": {
    "install:all": "npm install",
    "build:server": "npm run build --workspace=packages/server",
    "start:server": "npm start --workspace=packages/server",
    "dev:server": "npm run dev --workspace=packages/server",
    "build:client": "npm run build --workspace=my-react-app",
    "dev:client": "npm run dev --workspace=my-react-app"
  }
}